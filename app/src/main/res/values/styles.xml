        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginLeft">8sp</item>
    </style>

    <style name="SkilsTextLearning">
        <item name="android:layout_height">20sp</item>
        <item name="android:layout_width">100sp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">8sp</item>
        <item name="android:paddingTop">4sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginLeft">8sp</item>
    </style>

    <!-- experience list-->
    <style name="languageTextPlaneTextsSide">
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingLeft">8sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="certificateTextPlaneTextsSide">
        <item name="android:layout_width">80sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingLeft">8sp</item>
    </style>
    <style name="durationTextPlaneTextsSide">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingLeft">8sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
