        <item name="android:paddingLeft">8sp</item>
        <item name="android:paddingTop">4sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginLeft">8sp</item>
    </style>

    <style name="SkilsTextTrying">
        <item name="android:layout_height">20sp</item>
        <item name="android:layout_width">150sp</item>
        <item name="android:background">@color/colorAccent</item>
